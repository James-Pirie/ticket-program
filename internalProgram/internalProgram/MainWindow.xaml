<Window x:Class="internalProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:internalProgram"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500" FontSize="14" Background="Maroon">

    <Border Background="#2E3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="40" HorizontalAlignment="Center"/>
            <Separator Height="6"/>
            <Label Name="usernameLabel" Content="Username" Foreground="White" FontSize="20"/>
            <TextBox x:Name="txtUsername" Background="#545d6a" FontSize="20" Height="34" Width="410" Foreground="White"/>
            <Label Name="passwordLabel" Content="Password" Foreground="White" FontSize="20"/>
            <PasswordBox Name="txtPassword" Background="#545d6a" FontSize="20" Height="34" Width="410" Foreground="White"/>
            <Button Name="buttonLogin" Content="Login" Margin="130 35" Background="#545d6a" FontSize="20" Foreground="White" Click="buttonLoginClick"/>
        </StackPanel>
    </Border>
</Window>
